{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Accueil{% endblock title %}

{% block body %}
<div class="container mt-4">
    <div class="jumbotron">
    <h1 class="display-4">Bienvenue sur SymRecipe</h1>
    <p class="lead">SymRecipe est une app qui va te permettre de créer et partager tes recettes.</p>
    <hr class="my-4">
    <p>Pour commencer, Rendez-vous sur la page d'inscription</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="{{path('security.registration')}}" role="button">Inscription</a>
    </p>
    </div>
    <div class="recipes">
        <h2 class="mt-4">Recette de la communauté</h2>
        <div class="d-flex justify-content-between">
            {% for recipe in recipes %}
            <div class="card border-primary mb-3" style="max-width: 20rem;">
                <div class="card-header">Recette n° {{recipe.id}}</div>
                <div class="card-body">
                    <h4 class="card-title">{{recipe.name}}</h4>
                    <p class="card-text">{{recipe.description|slice(0, 100)~'...'}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>


{% endblock %}